{
  "name": "@petr-ptacek/vue-resize-container-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/petr-ptacek/vue-resize-container-monorepo.git"
  },
  "scripts": {
    "dev:nuxt": "pnpm --filter playground-nuxt dev",
    "dev:vue": "bash scripts/vue-dev.sh",
    "build": "pnpm -r --filter ./packages build",
    "lint": "eslint . && pnpm -r lint",
    "lint:fix": "eslint . --fix && pnpm -r lint:fix",
    "type-check": "pnpm -r --filter ./packages type-check",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.3.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "concurrently": "^9.2.0"
  }
}
